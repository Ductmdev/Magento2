<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="bap" translate="label" sortOrder="9999999">
            <label>BAP</label>
        </tab>
        <section id="bap_announcement" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>Theme</label>
            <tab>bap</tab>
            <resource>Bap_Announcement::config</resource>
            <group id="general" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Announcement</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Enable Announcement</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="announcement_text" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Announcement Text</label>
                </field>
            </group>
        </section>
    </system>
</config>
